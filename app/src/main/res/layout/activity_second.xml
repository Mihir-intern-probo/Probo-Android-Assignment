<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/sginupImg"
        android:layout_width="149dp"
        android:layout_height="133dp"
        android:src="@drawable/probo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/ptEmail"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:background="@drawable/my_border"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:barrierMargin="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.463" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:shadowColor="#000000"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <EditText
        android:id="@+id/ptDate"
        android:layout_width="199dp"
        android:layout_height="34dp"
        android:background="@drawable/my_border"
        android:ems="10"
        android:hint="Select Date"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:barrierMargin="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <ImageView
        android:id="@+id/calender"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:onClick="openDatePicker"
        android:src="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/ptPassword"
        android:layout_width="201dp"
        android:layout_height="33dp"
        android:background="@drawable/my_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:barrierMargin="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <EditText
        android:id="@+id/ptConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:background="@drawable/my_border"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="14sp"
        app:barrierMargin="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="24dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752"
        app:srcCompat="@drawable/india_flag_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>